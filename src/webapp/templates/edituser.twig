{% extends 'base.twig' %}

{% block content %}

    <h2>Edit profile</h2>

    <form enctype="multipart/form-data" action="" method="POST">
        <div id="flasherror">{{ flash.error|raw }}</div>

        <label>email:</label>
        <input type="text" name="email" value="{{ user.email|raw }}"> <br />

        <label>Bio:</label>
        <textarea name="bio">{{ user.bio|raw }}</textarea>

        <label>Age:</label>
        <input type="text" name="age" value="{{ user.age|raw }}"> <br />

        <label>Profile picture:</label>
        <input type="file" name="file"> <br />

        <input type="hidden" name="CSRFToken" value="{{ token|raw }}"> <br />

        <input type="submit" name="submit" value="Save profile">
    </form>
{% endblock %}
