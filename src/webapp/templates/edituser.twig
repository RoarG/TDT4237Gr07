{% extends 'base.twig' %}

{% block content %}

    <h2>Edit profile</h2>

    <form action="" method="POST">
        <div id="flasherror">{{ flash.error|escape }}</div>

        <label>email:</label>
        <input type="text" name="email" value="{{ user.email|escape }}"> <br />

        <label>Bio:</label>
        <textarea name="bio">{{ user.bio|escape }}</textarea>

        <label>Age:</label>
        <input type="text" name="age" value="{{ user.age|escape }}"> <br />

        <input type="submit" name="submit" value="Save profile">
    </form>
{% endblock %}
