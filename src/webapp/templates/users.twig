{% extends 'base.twig' %}

{% block content %}

    <h2>All users</h2>

    {% if users %}
        <table>
        <tr>
            <th>Id</th>
            <th>Username</th>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.id|escape }}</td>
                <td><a href="/user/{{ user.username|escape }}">{{ user.username|escape }}</a></td>
                <td><img src="/images/profilepics/{{ user.getImageUrl|escape }}" height="70">
            </tr>
        {% endfor %}
        </table>
    {% else %}
        The users table is empty.
    {% endif %}

{% endblock %}
